    <div>
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Home", "BaeCoach")">BaeCoach</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav w-100">

                    <li class="nav-item dropdown ml-auto">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                        <div class="dropdown-content" aria-labelledby="navbarDropdownMenuLink" style="right:0">
                            @using (Html.BeginForm("checkEdit", "BaeCoach", FormMethod.Get))
                            {
                                <input id="Submit1" type="submit" value="Update Profile" style="border: none; background-color:transparent;" />
                                <input id="Text1" type="text" value="@Session["myUsersID"]" name="UserID" hidden />
                            }
                            @using (Html.BeginForm("Logout", "BaeCoach"))
                            {
                                <input id="Submit1" type="submit" value="Log out" style="border: none; background-color:transparent;" />
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div style="text-align:center; font-family: Georgia;  ">
        <br />
        <h1 style="margin-top:150px">@Session["TopicName"].ToString()</h1>

    </div>


    <section class="blog_section">
        <div class="container">
            <div class="blog_content">
                <div class="owl-carousel owl-theme">
                    @foreach (var Post in Model)
                    {

                        <div class="blog_item" style="height:180px">

                            <div class="blog_details" id="x">
                                <center>
                                    <div class="blog_title">
                                        <h4>@Post.PostText</h4>
                                    </div>
                                    <hr />
                                    <div class="blog_title">
                                        @{var responses = Post.GetResponses(Convert.ToInt32(@Session["topicId"]), Convert.ToInt32(Session["PostId"]));
                                            if (responses.Count() != 0)
                                            {
                                                foreach (var response in responses)
                                                {

                                                    <h5>@response</h5>
                                                }
                                            }
                                            else
                                            {
                                                <h5>No response yet</h5>
                                            }
                                        }

                                    </div>
                                </center>

                            </div>

                        </div>

                    }

                </div>
            </div>
        </div>
        <center>
            <a class=" btn btn-light" href="@Url.Action("Create", "Posts", FormMethod.Get)" title="Add an entry"><i class="fa fa-plus"></i></a>
        </center>
    </section>

    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <!-- bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <!-- carousel -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.js"></script>

</body>

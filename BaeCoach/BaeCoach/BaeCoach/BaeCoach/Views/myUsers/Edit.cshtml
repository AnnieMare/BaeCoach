@model BaeCoach.Models.myUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/ApplicationStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Edit</title>
</head>
<body>
    <div>
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Home", "BaeCoach")">BaeCoach</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav w-100">

                    <li class="nav-item dropdown ml-auto">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-user"></span>
                        </a>
                        <div class="dropdown-content" aria-labelledby="navbarDropdownMenuLink" style="right:0">
                            @using (Html.BeginForm("checkEdit", "BaeCoach", FormMethod.Get))
                            {
                                <input id="Submit1" type="submit" value="Update Profile" style="border: none; background-color:transparent;" />
                                <input id="Text1" type="text" value="@Session["myUsersID"]" name="UserID" hidden />
                            }
                            @using (Html.BeginForm("Logout", "BaeCoach"))
                            {
                                <input id="Submit1" type="submit" value="Log out" style="border: none; background-color:transparent;" />
                            }



                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>


    <center>
        <div id="element">
            <div class="card-body1" style="width:60%; height:100%">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h3>Update your profile @Model.Name</h3>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.UserID)
                        <center>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </center>
                        <center>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </center>
                        <center>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </center>
                        <center>
                            <div class="form-group">
                                @Html.LabelFor(model => model.FK_TitleID, "Title", htmlAttributes: new { @class = "control-label col-md-2" })
                                @*<label>Title</label>*@
                                <div class="col-md-10">
                                    @Html.DropDownList("FK_TitleID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FK_TitleID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </center>
                        <center>
                            <div class="form-group">
                                @Html.LabelFor(model => model.FK_GenderID, "Gender", htmlAttributes: new { @class = "control-label col-md-2" })

                                <div class="col-md-10">
                                    @Html.DropDownList("FK_GenderID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FK_GenderID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </center>
                        <center>
                            <div class="form-group">
                                @Html.LabelFor(model => model.FK_RelationshipStatusIdn, "Relationship Status", htmlAttributes: new { @class = "control-label col-md-2" })

                                <div class="col-md-10">
                                    @Html.DropDownList("FK_RelationshipStatusIdn", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FK_RelationshipStatusIdn, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </center>
                        <center>
                            <div class="form-group">
                                @Html.LabelFor(model => model.FK_CityID, "City", htmlAttributes: new { @class = "control-label col-md-2" })

                                <div class="col-md-10">
                                    @Html.DropDownList("FK_CityID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.FK_CityID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </center>


                    </div>
                }
                <div class="row" style="width:400px; text-align:center; align-content:center;">
                    <div class="col-lg-6 col-xs-6">

                        <input type="submit" value="Save" class="btn btn-default  form-control" />
                    </div>
                    <div class="col-lg-6 col-xs-6">
                        @using (Html.BeginForm("Delete", "myUsers", FormMethod.Get))
                        {
                            <input id="Submit1" type="submit" value="Deactivate Account" class="btn btn-default form-control" />
                            <input id="Text1" type="text" value="@Session["myUsersID"]" name="id" hidden />
                        }
                    </div>
                </div>
            </div>
        </div>
                             
    </center>
</body>
</html>



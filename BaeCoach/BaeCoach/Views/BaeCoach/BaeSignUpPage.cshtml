@model BaeCoach.ViewModel.BaeSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/StyleSheet1.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <title>BaeSignUpPage</title>
</head>
<body>
    <center>
        <div id="element">
            <div class="card-body1" style="width:60%">
                <h3>SignUp</h3>
                <p>Please provide the necessary details below. </p>

                @using (Html.BeginForm("BaeAdd", "BaeCoach", FormMethod.Post))
                {
                    <div class="grid-container">
                        <div class="grid-item">

                            <lable>Name:</lable><input type="text" class="form-control" id="Name" required />
                            <lable>Surname:</lable><input type="text" class="form-control" id="Surname" required />
                            <lable>Username:</lable><input type="text" class="form-control" id="UserName" required />
                            <lable>Email:</lable><input type="email" class="form-control" id="Email" required />
                            <lable>Password:</lable><input type="password" class="form-control" id="Password" required />

                            <lable>Country:</lable><select class="form-control" id="Country" required>
                                <option>---Please Select---</option>
                                @foreach (var country in Model.CountryList)
                                {
                                    <option>@country.Name</option>
                                }
                            </select>

                            <lable>Provice:</lable><select class="form-control" id="Provice" required>
                                <option>---Please Select---</option>
                                @foreach (var region in Model.RegionList)
                                {
                                    <option>@region.Name</option>
                                }

                            </select>

                            <lable>City:</lable><select class="form-control" id="City" required>
                                <option>---Please Select---</option>
                                @foreach (var region in Model.CityList)
                                {
                                    <option>@region.Name</option>
                                }
                            </select>
                        </div>

                        <div class="grid-item">
                            <lable for="Title">Title:</lable><select class="form-control" id="Title" style="width:40%; float:right" required>
                                <option>---Please Select---</option>
                                <option>Mr.</option>
                                <option>Mrs.</option>
                                <option>Miss.</option>
                                <option>Dr.</option>
                                <option>Mx.</option>
                                <option>Prefer not to say</option>
                            </select>
                            <br />

                            <div class="grid-item">
                            </div>
                            <br />
                            <div class="grid-item">
                                <lable for="Gender">Gender:</lable><select class="form-control" id="Gender" style="width:40%; float:right " required>
                                    <option>---Please Select---</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                    <option>Prefer not to say</option>
                                </select>
                                <br />
                            </div>
                            <br />
                            <div class="grid-item">
                            </div>
                            <div class="grid-item">
                                <lable for="RelationshipStatus">Relationship Status:</lable><select class="form-control" id="RelationshipStatus" style="width:50%; float:right" required>
                                    <option>---Please Select---</option>
                                    <option>Married</option>
                                    <option>In A Relationship</option>
                                    <option>Single</option>
                                    <option>Its Complicated</option>
                                </select>

                            </div>
                        </div>
                        <div>
                            <input type="submit" class="btn" id="buttonRight" value="Submit" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </center>
</body>
</html>

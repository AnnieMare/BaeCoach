
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/StyleSheet1.css" rel="stylesheet" />

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <title>DoLogin</title>
</head>
<body>
    <div>

        <div class="card-body" id="LoginBox">
            <div class="container" id="box1">
                @using (Html.BeginForm("DoLogin", "BaeCoach", FormMethod.Post))
                {
                    <h2>Please sign into your BaeCoach Account</h2>
                    <label class="label label-default" style="float:left; font-size:large">Email:</label>
                    <input type="email" class="form-control" required />
                    <br />
                    <label class="label label-default" style="float:left; font-size:large">Password:</label>
                    <input type="password" class="form-control" required />
                    <br />
                    <div id="buttonRight">
                        <input type="submit" value="Login" class="btn" id="btn" />
                        @*//This must take them to the signup options page DoLogin*@
                        <input type="submit" value="Sign Up" class="btn" id="btn" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
